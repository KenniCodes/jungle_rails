<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |line_item| %>
        <tr>
        <td>
          <h4><%= line_item.product.name %></h4>
            <img src="<%= line_item.product.image.thumb.url %>" alt="<%= line_item.product.name %>" />
          </td>
          <td><%= line_item.product.description %></td>
          <td><%= line_item.quantity %></td>
          <td><%= humanized_money_with_symbol(line_item.total_price_cents * 0.01, precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="order-details">
    <thead><td>Email: <%= @order.email %></td></thead>
    <thead><td>Total: <%= humanized_money_with_symbol(@order.total_cents * 0.01, precision: 2) %></td></thead>
  </table>

  <div>
    <h4>Thank you for your purchase!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-success' %>
</section>
